<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/editProfileLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="bg.mentormate.academy.radarapp.activities.EditProfileActivity">

    <EditText
        android:id="@+id/etChangePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/avatarControlLayout"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="@string/changePass"
        android:inputType="textPassword"
        android:paddingTop="10dp" />

    <EditText
        android:id="@+id/editChangeEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/etChangePassword"
        android:layout_marginTop="42dp"
        android:ems="10"
        android:hint="@string/changeEmail"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/btnSaveChanges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editChangeEmail"
        android:layout_marginTop="15dp"
        android:text="@string/saveChangesBtn" />

    <EditText
        android:id="@+id/etConfirmPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/etChangePassword"
        android:layout_alignRight="@+id/etChangePassword"
        android:layout_below="@+id/etChangePassword"
        android:ems="10"
        android:hint="@string/reTypePass"
        android:inputType="textPassword" />

    <LinearLayout
        android:id="@+id/avatarControlLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <com.parse.ParseImageView
            android:id="@+id/ivAvatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher" />

        <Button
            android:id="@+id/btnTakePic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/cameraBtn" />

        <Button
            android:id="@+id/btnChangeAvatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/galeryBtn" />

    </LinearLayout>

</RelativeLayout>
